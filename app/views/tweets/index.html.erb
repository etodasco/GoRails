<div class="d-flex justify-content-between align-items-center">
    <h1>X Posts</h1>

    <% if Current.user.twitter_accounts.any? %>
        <%= link_to "Schedule X Post", new_tweet_path, class: "btn btn-primary" %>
    <% end %>
</div>

<% if Current.user.twitter_accounts.none? %>
    <%= button_to "Connect your X Account", "/auth/twitter", data: { turbo: false }, local: true, method: :post, class: "btn btn-primary" %>
<% end %>

<%= render @tweets %>